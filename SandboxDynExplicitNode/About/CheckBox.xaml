<UserControl x:Class="SandboxDynExplicitNode.About.CheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SandboxDynExplicitNode.About"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock Text="Check me for a nice quote" FontSize="10"/>
        <CheckBox Name="AboutCheck" HorizontalAlignment="Center" Margin="10" IsChecked="{Binding IsChecked}"/>
    </StackPanel>
</UserControl>
